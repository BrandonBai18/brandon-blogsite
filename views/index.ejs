<%- include("partials/header") %>

<div class = "ui main text container segment">
    <h1>This is the index page</h1>
    <% blogs.forEach(function(blog){ %>
        <div>
            <h2><%= blog.title %></h2>
            <img src = "<%= blog.image %>" >
            <span>><%= blog.body %></span>
            <p> <%= blog.created %> </p>
            <a href = "/blogs/<%= blog._id%>">Read more</a>
        </div>
    <% }); %>
</div>
<%- include("partials/footer") %>


